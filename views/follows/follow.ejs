<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artist Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-dark text-white">
    <!-- Main Header -->
    <div class="container py-4 text-center">
        <h1 class="text-light">ChordCloud</h1>
    </div>

    <!-- Main Form Container -->
    <div class="container bg-dark text-white p-5 rounded shadow-lg" id="MainFrame">
        <form action="/follows/<%= action %>" method="POST" class="needs-validation" novalidate>
            <!-- Following Artist Dropdown -->
            <div class="mb-4">
                <label for="following_artist" class="form-label">Following Artist</label>
                <select id="following_artist" name="following_artist_id" class="form-select bg-secondary text-light" required>
                    <option value="">Select an artist</option>
                    <% artists.forEach(function(artist) { %>
                        <option value="<%= artist.id %>"><%= artist.username %></option>
                    <% }); %>
                </select>
                <div class="invalid-feedback">Please select a following artist.</div>
            </div>

            <!-- Followed Artist Dropdown -->
            <div class="mb-4">
                <label for="followed_artist" class="form-label">Followed Artist</label>
                <select id="followed_artist" name="followed_artist_id" class="form-select bg-secondary text-light" required>
                    <option value="">Select an artist</option>
                    <% artists.forEach(function(artist) { %>
                        <option value="<%= artist.id %>"><%= artist.username %></option>
                    <% }); %>
                </select>
                <div class="invalid-feedback">Please select a followed artist.</div>
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </form>

        <!-- Back Button -->
        <div class="mt-3 text-center">
            <form action="/artists" method="GET">
                <button type="submit" class="btn btn-outline-light">Back</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        // Enable Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
</body>
</html>